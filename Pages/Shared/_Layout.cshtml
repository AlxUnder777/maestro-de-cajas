<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maestro De Cajas</title>

    <!-- Tailwind / CSS principal -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-[#03070f] text-gray-200 min-h-screen flex flex-col">

    <div class="body-grid maestro-veil flex-1 flex flex-col">

        @if (!(ViewData["HideNav"] as bool? == true))
        {
            <nav class="navbar-cyber">
                <div class="max-w-6xl mx-auto flex items-center justify-between gap-6 px-6 py-4">
                    <div class="flex items-center gap-3">
                        <div class="h-9 w-[2px] bg-cyan-400/60 shadow-[0_0_16px_rgba(56,189,248,0.65)]"></div>
                        <div class="leading-tight">
                            <p class="text-xs uppercase tracking-[0.3em] text-cyan-100/70">HUD System</p>
                            <h1 class="text-3xl font-bold cyber-glow">Maestro De Cajas</h1>
                        </div>
                    </div>

                    <div class="flex gap-8 text-lg">
                        <a asp-page="/Index" class="nav-item">Inicio</a>
                        <a asp-page="/Login" class="nav-item">Cerrar sesion</a>
                    </div>
                </div>
            </nav>
        }

        <main class="flex-1 p-6">
            @RenderBody()
        </main>

        <footer class="text-center text-gray-500 mt-4 mb-6 text-sm">
            Sistema HUD neon v1.0 - Ripley Core Systems
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
